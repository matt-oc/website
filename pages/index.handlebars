<!doctype html>
<html class="no-js" lang="">
    <head>
        <meta charset="utf-8">
        <meta http-equiv="x-ua-compatible" content="ie=edge">
        <title>{{ metadata.title }}</title>
        <meta name="description" content="{{ metadata.description }}">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <meta name="apple-mobile-web-app-capable" content="yes" />

        <meta property="og:title" content="{{ metadata.opengraph.title }}" />
        <meta property="og:url" content="{{ metadata.opengraph.url }}" />
        <meta property="og:type" content="{{ metadata.opengraph.type }}" />
        <meta property="og:description" content="{{ metadata.opengraph.description }}" />
        <meta property="og:image" content="{{ metadata.opengraph.image }}" />
        <meta property="og:twitter" content="{{ metadata.opengraph.twitter.card }}" />
        <meta property="og:site" content="{{ metadata.opengraph.twitter.site }}" />
        <meta property="og:author" content="{{ metadata.opengraph.twitter.author }}" />

        <link rel="stylesheet" href="microservices-day.css">
    </head>
    <body>
      
      <div id="top"></div>

      {{> header}}

      <section id="masthead">
        
        <img src="images/logo.svg" alt="Microservices Day">
        <h4>{{ metadata.conf.tagline }}</h4>
        <h2>{{ metadata.conf.name }}</h2>
        <h3>{{ metadata.conf.date }} / {{ metadata.conf.location.human }}</h3>

        <div id="sponsors" class="clearfix">
          <br>
          <img src="images/redhat.svg" alt="redhat" style="padding-right: 20px">
          <img src="images/mckinsey.svg" id="mckinsey" alt="McKinsey's Digital Labs" style="padding-right: 50px">
          <img src="images/nearform.svg" alt="NearForm">
        </div>

        <a href="{{ '#top' }}" class="button">Register Now<br>(coming soon)</a>

        <div id="down">&darr;</div>

      </section>

      <section id="about">

        <h2>{{ about.title }}</h2>
        <p>{{ about.blurb }}</p>

      </section>

      <section id="agenda">

        <h2>Agenda</h2>
        
        {{#each agenda}}
          {{> session}}
        {{/each}}

      </section>

      <section id="conduct">

        <h2>{{ conduct.title }}</h2>
        <p>{{ conduct.blurb }}</p>

      </section>

      <section id="location"></section>

      <div id="location-images" class="clearfix">
        <img src="images/venue/barb1.jpg" alt="Venue">
        <img src="images/venue/barb2.jpg" alt="Venue">
        <img src="images/venue/barb3.jpg" alt="Venue">
        <img src="images/venue/barb4.jpg" alt="Venue">
      </div>

      <div id="hotels">
        <h2>Hotels <a href="#" id="toggleHotelMap" style="color:red">Toggle hotels on map</a></h2>
        <p id="description">Below you find a selection of unaffiliated hotels near to the event:</p>
        <br>
        <ul class="clearfix">
          {{#each hotels}}
            <li>
              <h3><a href="{{ href }}">{{ name }}</a></h3>
              <h4>{{ address }}</h4>
              <p class="postcode">{{ postcode }}</p>
              <p class="price"><span style="color:#787878;">Cost: </span>{{ price }}</p>
              <p class="des">"{{ description }}"</p>
            </li>
          {{/each}}
        </ul>
      </div>

      <div id="infowindow-template">
        <h3><a href="{{ metadata.conf.location.link }}">{{ metadata.conf.location.name }}</a></h3>
        <p>{{ metadata.conf.location.address }}</p>
      </div>

      {{> footer}}

      <script>
        var msGeo = {
          lat: {{ metadata.conf.location.lat }},
          lng: {{ metadata.conf.location.lng }}
        };
      </script>

      <script src="https://maps.googleapis.com/maps/api/js?v=3.exp"></script>
      <script src="js/vendor.js"></script>
      <script src="js/app.js"></script>

      {{!-- Google structured markup --}}
      <script type="application/ld+json">
      {
        "@context": "http://schema.org",
        "@type": "Event",
        "name": "{{ metadata.opengraph.title }}",
        "startDate" : "{{ metadata.opengraph.timestamp }}",
        "url" : "{{ metadata.opengraph.url }}",
        "location" : {
          "@type" : "Place",
          "name" : "{{ metadata.conf.location.name }}",
          "address" : "{{ metadata.conf.location.address }}"
        }
      }
      </script>
      <script type="application/ld+json">
      {  
        "@context" : "http://schema.org",
        "@type" : "WebSite",
        "name" : "{{ metadata.opengraph.title }}",
        "alternateName" : "{{ metadata.opengraph.description }}",
        "url" : "{{ metadata.opengraph.url }}"
      }
      </script>
      <script type="application/ld+json">
      {
        "@context": "http://schema.org",
        "@type": "Organization",
        "url": "{{ metadata.opengraph.url }}",
        "logo": "{{ metadata.opengraph.logo }}",
        "sameAs" : [ "http://www.twitter.com/microserviceday"]
      }
      </script>

      <script>
        (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
        (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
        m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
        })(window,document,'script','//www.google-analytics.com/analytics.js','ga');

        ga('create', 'UA-64261945-1', 'auto');
        ga('send', 'pageview');

      </script>

    </body>
</html>